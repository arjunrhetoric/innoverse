<%
  // Compute pending reviews if not passed from the controller
  const pendingReviews = proposals.filter(p => p.status === "Pending").length;
%>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Student Dashboard - INNOVERSE</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
  <style>
    :root {
      --primary-color: #2575fc;
      --primary-dark: #1e54ff;
      --secondary-color: #a0a0a0;
      --bg-dark: #121212;
      --bg-darker: #1e1e1e;
      --card-bg: #2a2a2a;
      --text-color: #ffffff;
      --text-muted: #a0a0a0;
      --border-color: rgba(255, 255, 255, 0.1);
      --card-shadow: 0 4px 6px rgba(0,0,0,0.3);
      --danger-color: #dc3545;
      --warning-color: #ffc107;
      --success-color: #28a745;
    }
    body {
      background-color: var(--bg-dark);
      color: var(--text-color);
      font-family: 'Inter', system-ui, -apple-system, sans-serif;
      line-height: 1.6;
    }
    .navbar {
      background: linear-gradient(135deg, var(--bg-darker) 0%, #252525 100%);
      backdrop-filter: blur(10px);
      box-shadow: 0 2px 15px rgba(0,0,0,0.2);
      position: sticky;
      top: 0;
      z-index: 1000;
      padding: 1rem;
    }
    .navbar-brand {
      font-size: 1.5rem;
      font-weight: bold;
      background: linear-gradient(45deg, var(--primary-color), var(--secondary-color));
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
      transition: transform 0.3s ease;
    }
    .navbar-brand:hover {
      transform: scale(1.05);
    }
    .dashboard-container {
      margin-top: 30px;
    }
    .card {
      background: var(--card-bg);
      border: none;
      border-radius: 15px;
      box-shadow: var(--card-shadow);
      padding: 20px;
      margin-bottom: 1rem;
      border: 1px solid var(--border-color);
      overflow: hidden;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }
    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 15px rgba(37,117,252,0.2);
    }
    .welcome-card {
      background: linear-gradient(120deg, var(--primary-color), #6a11cb);
      color: white;
      padding: 2rem;
      border-radius: 15px;
      margin-bottom: 2rem;
      animation: fadeIn 0.5s ease-out;
      text-align: center;
    }
    .stat-card {
      background: var(--card-bg);
      border: 1px solid var(--border-color);
      text-align: center;
      padding: 1.5rem;
      margin-bottom: 1rem;
      position: relative;
      overflow: hidden;
    }
    .stat-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 4px;
      background: linear-gradient(90deg, var(--primary-color), #6a11cb);
    }
    .stat-card h5 {
      color: var(--text-muted);
      font-size: 0.9rem;
      text-transform: uppercase;
      letter-spacing: 1px;
    }
    .stat-card h3 {
      color: var(--primary-color);
      font-size: 2.5rem;
      font-weight: 700;
      margin: 10px 0;
    }
    .nav-tabs {
      border-bottom: 1px solid var(--border-color);
      margin-bottom: 2rem;
      gap: 0.5rem;
    }
    .nav-tabs .nav-link {
      color: var(--text-muted);
      background-color: var(--card-bg);
      border: none;
      padding: 1rem 1.5rem;
      font-weight: 500;
      border-radius: 5px 5px 0 0;
      transition: all 0.3s ease;
    }
    .nav-tabs .nav-link:hover {
      background: var(--card-bg);
      color: var(--text-color);
    }
    .nav-tabs .nav-link.active {
      color: var(--primary-color);
      background: var(--card-bg);
      border-bottom: 2px solid var(--primary-color);
    }
    .search-bar {
      background: var(--card-bg);
      border: 1px solid var(--border-color);
      border-radius: 5px;
      padding: 0.75rem;
      color: var(--text-color);
      margin-bottom: 1.5rem;
    }
    .search-bar:focus {
      border-color: var(--primary-color);
      box-shadow: 0 0 0 2px rgba(37,117,252,0.2);
    }
    .skills-badge {
      background: rgba(37,117,252,0.2);
      color: var(--primary-color);
      padding: 0.25rem 0.75rem;
      border-radius: 1rem;
      font-size: 0.875rem;
      margin-right: 0.5rem;
      margin-bottom: 0.5rem;
      display: inline-block;
      transition: all 0.3s ease;
    }
    .skills-badge:hover {
      transform: translateY(-2px);
    }
    .deadline-badge {
      background: rgba(220,53,69,0.2);
      color: var(--danger-color);
      padding: 0.25rem 0.75rem;
      border-radius: 1rem;
      font-size: 0.875rem;
      display: inline-block;
    }
    .proposal-status {
      padding: 0.25rem 0.75rem;
      border-radius: 1rem;
      font-size: 0.875rem;
      font-weight: 500;
    }
    .status-pending {
      background: rgba(255,193,7,0.2);
      color: var(--warning-color);
    }
    .status-approved {
      background: rgba(40,167,69,0.2);
      color: var(--success-color);
    }
    .status-rejected {
      background: rgba(220,53,69,0.2);
      color: var(--danger-color);
    }
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    .fa-bell {
      cursor: pointer;
      transition: transform 0.3s ease;
    }
    .fa-bell:hover {
      animation: bell-ring 1s ease;
    }
    @keyframes bell-ring {
      0%, 100% { transform: rotate(0); }
      20%, 60% { transform: rotate(15deg); }
      40%, 80% { transform: rotate(-15deg); }
    }
    ::-webkit-scrollbar {
      width: 8px;
    }
    ::-webkit-scrollbar-track {
      background: var(--bg-dark);
    }
    ::-webkit-scrollbar-thumb {
      background: var(--primary-color);
      border-radius: 4px;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">Innoverse</a>
      <div class="ms-auto d-flex align-items-center">
        <div class="position-relative me-4">
          <input type="text" class="form-control" placeholder="Search proposals...">
          <i class="fas fa-search position-absolute" style="right: 15px; top: 50%; transform: translateY(-50%); color: var(--text-muted);"></i>
        </div>
        <i class="fa-solid fa-bell fs-5 me-4" style="color: var(--primary-color);"></i>
        <!-- My Account Dropdown -->
        <div class="dropdown">
          <button class="btn btn-dark dropdown-toggle d-flex align-items-center" type="button" id="accountDropdown" data-bs-toggle="dropdown">
            <i class="fa-solid fa-building me-2"></i> <%= user.name %>
          </button>
          <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark" aria-labelledby="accountDropdown">
            <li>
              <a class="dropdown-item" href="/github-profile">
                <i class="fab fa-github me-2"></i> View Profile
              </a>
            </li>
            <li>
              <a class="dropdown-item text-danger" href="/api/auth/logout">
                <i class="fas fa-sign-out-alt me-2"></i> Logout
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </nav>

  <!-- Dashboard Container -->
  <div class="container dashboard-container" style="margin-top: 6rem;">
    <!-- Welcome Card -->
    <div class="card welcome-card mb-4">
      <h2 class="fw-bold mb-2">Welcome, <%= user.name %> ðŸ‘‹</h2>
      <p class="mb-0">Manage your challenges and review student proposals</p>
    </div>

    <!-- Statistics -->
    <div class="row mb-4">
      <div class="col-md-4">
        <div class="card stat-card text-center">
          <h5>Active Challenges</h5>
          <h3><%= problems.length %></h3>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card stat-card text-center">
          <h5>Total Proposals</h5>
          <h3><%= proposals.length %></h3>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card stat-card text-center">
          <h5>Pending Reviews</h5>
          <h3><%= pendingReviews %></h3>
        </div>
      </div>
    </div>

    <!-- Tabs Navigation -->
    <ul class="nav nav-tabs mb-4" id="dashboardTabs" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="challenges-tab" data-bs-toggle="tab" data-bs-target="#challenges" type="button" role="tab" aria-controls="challenges" aria-selected="true">
          <i class="fas fa-trophy me-2"></i>Available Challenges
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="proposals-tab" data-bs-toggle="tab" data-bs-target="#proposals" type="button" role="tab" aria-controls="proposals" aria-selected="false">
          <i class="fas fa-paper-plane me-2"></i>My Proposals
        </button>
      </li>
    </ul>

    <!-- Tabs Content -->
    <div class="tab-content" id="dashboardTabsContent">
      <!-- Available Challenges Tab -->
      <div class="tab-pane fade show active" id="challenges" role="tabpanel">
        <input type="text" id="searchBar" class="form-control search-bar" placeholder="Search challenges by title or description..." />
        <div class="row g-4" id="challengesContainer">
          <% problems.forEach(problem => { 
               let submittedProposal = null;
               for (let i = 0; i < proposals.length; i++) {
                 if (proposals[i].problemId && proposals[i].problemId.toString() === problem._id.toString()){
                   submittedProposal = proposals[i];
                   break;
                 }
               }
               if (submittedProposal && submittedProposal.status === "Approved") { 
                 return;
               }
          %>
            <div class="col-md-6 col-lg-4" id="challenge-<%= problem._id %>">
              <div class="card challenge-card">
                <h5><%= problem.title %></h5>
                <p class="text-muted"><%= problem.description %></p>
                <% if (problem.createdBy) { %>
                  <p class="text-muted">
                    Posted by: 
                    <a href="/startup-profile/<%= problem.createdBy._id %>" target="_blank">
                      <%= problem.createdBy.name %>
                    </a>
                  </p>
                <% } %>
                <div class="mb-3">
                  <% if (problem.skillsRequired) { %>
                    <% problem.skillsRequired.forEach(skill => { %>
                      <span class="skills-badge"><%= skill %></span>
                    <% }) %>
                  <% } %>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                  <span class="deadline-badge">
                    <i class="far fa-clock me-1"></i>
                    <%= new Date(problem.finalDeadline).toDateString() %>
                  </span>
                </div>
                <% if (submittedProposal) { 
                     if (submittedProposal.status === "Pending") { %>
                        <button class="btn btn-secondary w-100 mt-3" disabled>Proposal Pending</button>
                <%   } else if (submittedProposal.status === "Rejected") { %>
                        <a href="/api/proposals/submit/<%= problem._id %>" class="btn btn-warning w-100 mt-3 apply-btn" data-problem-id="<%= problem._id %>">
                          <i class="fas fa-redo me-2"></i>Reapply
                        </a>
                <%   } 
                   } else { %>
                        <a href="/api/proposals/submit/<%= problem._id %>" class="btn btn-primary w-100 mt-3 apply-btn" data-problem-id="<%= problem._id %>">
                          <i class="fas fa-rocket me-2"></i>Apply Now
                        </a>
                <% } %>
              </div>
            </div>
          <% }) %>
        </div>
      </div>

      <!-- My Proposals Tab -->
      <div class="tab-pane fade" id="proposals" role="tabpanel">
        <% if (proposals.length > 0) { %>
          <div class="row g-4">
            <% proposals.forEach(proposal => { %>
              <div class="col-12" id="proposal-<%= proposal._id %>">
                <div class="card">
                  <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-1">
                      <h5 class="mb-0"><%= proposal.problemId ? proposal.problemId.title : "Unknown Problem" %></h5>
                    </div>
                    <% if (proposal.problemId && proposal.problemId.createdBy) { %>
                      <p class="text-muted mb-2">
                        Posted by: 
                        <a href="/startup-profile/<%= proposal.problemId.createdBy._id %>" target="_blank">
                          <%= proposal.problemId.createdBy.name %>
                        </a>
                      </p>
                    <% } else { %>
                      <p class="text-muted mb-2">Posted by: Unknown</p>
                    <% } %>
                    <p class="text-muted mb-4"><%= proposal.description %></p>
                    <p><a href="<%= proposal.pptUrl %>" target="_blank">View Submitted PPT</a></p>
                    <div class="d-flex gap-3">
                      <% if (proposal.status === "Approved") { %>
                        <div class="mt-3">
                    <a href="<%= proposal.repoUrl %>" target="_blank" class="btn btn-success">
                      <i class="fab fa-github me-2"></i>View Repository
                        </a>
                      <a href="/project-tracking-dashboard" 
                       class="btn btn-primary">
                      <i class="fas fa-tasks me-2"></i>Project Dashboard
                        </a>
  </div>
                      <% } else if (proposal.status === "Rejected") { %>
                        <a href="/api/proposals/submit/<%= proposal.problemId._id %>" class="btn btn-warning">
                          <i class="fas fa-redo me-2"></i>Reapply
                        </a>
                      <% } else if (proposal.status === "Pending") { %>
                        <button class="btn btn-secondary" disabled>Proposal Pending</button>
                      <% } %>
                    </div>
                    <div class="mt-2">
                      <span class="proposal-status <%= proposal.status.toLowerCase() === 'approved' ? 'status-approved' : (proposal.status.toLowerCase() === 'rejected' ? 'status-rejected' : 'status-pending') %>">
                        <%= proposal.status %>
                      </span>
                    </div>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <div class="card">
            <div class="card-body text-center py-5">
              <i class="fas fa-paper-plane fa-3x mb-3 text-muted"></i>
              <p class="text-muted mb-0">You haven't submitted any proposals yet.</p>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const searchBar = document.getElementById('searchBar');
      const challengesContainer = document.getElementById('challengesContainer');
      searchBar.addEventListener('input', () => {
        const searchTerm = searchBar.value.toLowerCase();
        const challengeCards = challengesContainer.querySelectorAll('.col-md-6, .col-lg-4');
        challengeCards.forEach(card => {
          const title = card.querySelector('h5').textContent.toLowerCase();
          const description = card.querySelector('p').textContent.toLowerCase();
          
          if (title.includes(searchTerm) || description.includes(searchTerm)) {
            card.style.display = 'block';
          } else {
            card.style.display = 'none';
          }
        });
      });
    });
  </script>
</body>
</html>
