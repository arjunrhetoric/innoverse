<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Select Your Role - INNOVERSE</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            background: linear-gradient(135deg, #121212 0%, #1e1e1e 100%);
        }
        .full-height {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        .role-container {
            display: flex;
            gap: 40px;
            max-width: 1100px;
            width: 100%;
            background-color: rgba(30, 30, 30, 0.9);
            border-radius: 25px;
            padding: 60px;
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.7);
            backdrop-filter: blur(15px);
        }
        .role-card {
            flex: 1;
            background-color: rgba(45, 45, 45, 0.95);
            border-radius: 20px;
            padding: 40px;
            text-align: center;
            transition: all 0.4s ease;
            position: relative;
            overflow: hidden;
        }
        .role-card::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(45deg, transparent, #2575fc, transparent);
            transform: rotate(-45deg);
            opacity: 0;
            transition: opacity 0.4s ease;
        }
        .role-card:hover::before {
            opacity: 0.1;
        }
        .role-card:hover {
            transform: scale(1.05);
            box-shadow: 0 15px 35px rgba(37, 117, 252, 0.3);
        }
        .role-icon {
            font-size: 100px;
            margin-bottom: 30px;
            color: #2575fc;
            transition: transform 0.3s ease;
        }
        .role-card:hover .role-icon {
            transform: rotate(360deg);
        }
        .role-btn {
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
        }
        .role-btn::after {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(120deg, transparent, rgba(255,255,255,0.3), transparent);
            transition: all 0.5s ease;
        }
        .role-btn:hover::after {
            left: 100%;
        }
    </style>
</head>
<body>
    <div class="full-height">
        <div class="role-container">
            <div class="role-card" onclick="selectRole('Student')">
                <i class="fas fa-graduation-cap role-icon"></i>
                <h2 class="mb-4">Student</h2>
                <p class="mb-4">Unlock transformative opportunities, gain real-world experience, and accelerate your career journey.</p>
                <button class="btn btn-primary role-btn mt-3 w-100">Join as Student</button>
            </div>
            <div class="role-card" onclick="showStartupModal()">
                <i class="fas fa-rocket role-icon"></i>
                <h2 class="mb-4">Startup</h2>
                <p class="mb-4">Discover innovative talent, fuel your growth, and transform your entrepreneurial vision into reality.</p>
                <button class="btn btn-success role-btn mt-3 w-100">Join as Startup</button>
            </div>
        </div>
    </div>

    <div class="modal fade" id="businessEmailModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content" style="background-color: #1e1e1e; color: white;">
                <div class="modal-header border-bottom-0">
                    <h5 class="modal-title">Verify Startup Credentials</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="email" id="businessEmail" class="form-control" placeholder="Enter your business email" style="background-color: #2a2a2a; color: white;">
                    <small class="text-muted">We'll verify your startup's professional authenticity</small>
                </div>
                <div class="modal-footer border-top-0">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="submitStartup()">Continue</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function selectRole(role, businessEmail = null) {
            fetch("/api/auth/role-selection", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ role, businessEmail }),
            })
            .then(response => response.json())
            .then(data => {
                if (data.redirectPath) {
                    window.location.href = data.redirectPath;
                } else {
                    alert(data.message || "Something went wrong");
                }
            })
            .catch(error => {
                console.error("Error:", error);
                alert("An error occurred while selecting role.");
            });
        }

        function showStartupModal() {
            var modal = new bootstrap.Modal(document.getElementById("businessEmailModal"));
            modal.show();
        }

        function submitStartup() {
            var businessEmail = document.getElementById("businessEmail").value.trim();
            if (!businessEmail) {
                alert("Please enter your business email.");
                return;
            }
            selectRole("Startup", businessEmail);
        }
    </script>
</body>
</html>