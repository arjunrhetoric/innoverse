<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>PR Review</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container">
    <h2>Pull Request Details</h2>
    <div id="prDetails"></div>
    <hr>
    <h3>PR Chat</h3>
    <div id="chatWindow" style="height:300px; overflow-y:scroll; border:1px solid #ccc; padding:10px;"></div>
    <input type="text" id="chatInput" placeholder="Type a message..." class="form-control mt-2">
    <button id="sendChat" class="btn btn-primary mt-2">Send</button>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script>
    const repoOwner = "your-github-username";
    const repoName = "your-repo";
    const pullNumber = "123";
    const prId = `${repoOwner}-${repoName}-${pullNumber}`;

    fetch(`/api/pr/details?repoOwner=${repoOwner}&repoName=${repoName}&pullNumber=${pullNumber}`)
      .then(res => res.json())
      .then(data => {
        document.getElementById("prDetails").innerText = JSON.stringify(data, null, 2);
      })
      .catch(err => console.error("Error:", err));

    const socket = io();
    socket.emit("joinPRRoom", prId);

    socket.on("newPRChatMessage", (data) => {
      const chatWindow = document.getElementById("chatWindow");
      chatWindow.innerHTML += `<div><strong>${data.sender}:</strong> ${data.message}</div>`;
      chatWindow.scrollTop = chatWindow.scrollHeight;
    });

    document.getElementById("sendChat").addEventListener("click", () => {
      const message = document.getElementById("chatInput").value;
      if (!message) return;
      const chatData = {
        prId,
        message,
        sender: "Startup",
        timestamp: Date.now()
      };
      socket.emit("prChatMessage", chatData);
      document.getElementById("chatInput").value = "";
    });
  </script>
</body>
</html>
