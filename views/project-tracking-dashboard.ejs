        $(this).addClass('active');
        currentRepoOwner = $(this).data('repo-owner');
        currentRepoName = $(this).data('repo-name');
        currentPullNumber = $(this).data('pull-number');
        currentPrId = currentRepoOwner + '-' + currentRepoName + '-' + currentPullNumber;
