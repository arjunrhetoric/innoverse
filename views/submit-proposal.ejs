<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Submit Proposal - INNOVERSE</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #2575fc;
            --secondary-color: #6c757d;
            --bg-dark: #121212;
            --bg-darker: #1e1e1e;
            --card-bg: #2a2a2a;
            --text-color: #ffffff;
            --accent-color: #ff6b6b;
        }

        body {
            background-color: var(--bg-dark);
            color: var(--text-color);
            font-family: 'Segoe UI', system-ui, sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
        }

        .proposal-container {
            background: var(--card-bg);
            border-radius: 12px;
            padding: 2rem;
            width: 100%;
            max-width: 600px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .title {
            color: var(--primary-color);
            font-size: 1.8rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            text-align: center;
            position: relative;
        }

        .title::after {
            content: '';
            display: block;
            width: 60px;
            height: 3px;
            background: linear-gradient(90deg, var(--primary-color), #81d4fa);
            margin: 0.5rem auto 0;
            border-radius: 2px;
        }

        .form-control {
            background-color: var(--bg-darker);
            border: 1px solid var(--secondary-color);
            color: var(--text-color);
            border-radius: 8px;
            padding: 0.75rem;
            margin-bottom: 1.5rem;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            background-color: #333333;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(2, 136, 209, 0.25);
            color: var(--text-color);
        }

        textarea.form-control {
            min-height: 150px;
            resize: vertical;
        }

        .form-label {
            color: var(--primary-color);
            font-weight: 500;
            margin-bottom: 0.5rem;
            display: block;
        }

        .file-upload {
            background: var(--bg-darker);
            border: 2px dashed var(--secondary-color);
            border-radius: 8px;
            padding: 2rem;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .file-upload:hover {
            border-color: var(--primary-color);
            background: #333333;
        }

        .file-upload i {
            font-size: 2.5rem;
            color: var(--primary-color);
            margin-bottom: 0.75rem;
            transition: transform 0.3s ease;
        }

        .file-upload:hover i {
            transform: scale(1.1);
        }

        .file-upload p {
            margin: 0;
            color: var(--text-color);
            font-size: 0.95rem;
        }

        #fileNameDisplay {
            margin-top: 0.75rem;
            font-size: 0.9rem;
            color: var(--primary-color);
            font-weight: 500;
        }

        .submit-btn {
            background: linear-gradient(135deg, var(--primary-color), #1a5edb);
            border: none;
            border-radius: 50px;
            padding: 0.75rem 2rem;
            color: white;
            font-weight: 600;
            letter-spacing: 0.5px;
            width: 100%;
            margin-top: 1.5rem;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .submit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 20px rgba(2, 136, 209, 0.4);
        }
    </style>
</head>
<body>
    <!-- Proposal Form -->
    <div class="proposal-container">
        <h2 class="title"><i class="fas fa-paper-plane me-2"></i>Submit Proposal</h2>

        <form id="proposalForm" enctype="multipart/form-data">
            <input type="hidden" id="problemId" value="<%= problemId %>">
            
            <div class="mb-4">
                <label for="proposalDescription" class="form-label">Description</label>
                <textarea 
                    id="proposalDescription" 
                    class="form-control" 
                    placeholder="Describe your proposal..." 
                    required
                ></textarea>
            </div>

            <div class="mb-4">
                <label class="form-label">Upload Proposal PPT</label>
                <div class="file-upload" onclick="document.getElementById('proposalPPT').click()">
                    <i class="fas fa-cloud-upload-alt"></i>
                    <p>Drag and drop your presentation or click to browse</p>
                    <input 
                        type="file" 
                        id="proposalPPT" 
                        name="proposalFile" 
                        class="d-none" 
                        accept=".ppt, .pptx" 
                        required
                    >
                    <div id="fileNameDisplay"></div>
                </div>
            </div>

            <button type="submit" class="submit-btn">
                <i class="fas fa-check me-2"></i>Submit Proposal
            </button>
        </form>
    </div>

    <script>
        // File upload display
        document.getElementById("proposalPPT").addEventListener("change", function() {
            const fileName = this.files[0] ? this.files[0].name : "";
            document.getElementById("fileNameDisplay").textContent = fileName;
        });

        // Original form submission logic - unchanged
        document.getElementById("proposalForm").addEventListener("submit", async function (e) {
            e.preventDefault();

            const description = document.getElementById("proposalDescription").value;
            const pptFile = document.getElementById("proposalPPT").files[0];
            const problemId = document.getElementById("problemId").value;

            if (!description || !pptFile) {
                alert("Please fill all fields!");
                return;
            }

            const formData = new FormData();
            formData.append("problemId", problemId);
            formData.append("description", description);
            formData.append("proposalFile", pptFile);

            try {
                const response = await fetch("/api/proposals/submit", {
                    method: "POST",
                    body: formData,
                });

                const data = await response.json();
                if (data.message) {
                    alert("Proposal submitted successfully!");
                    window.location.href = "/student-dashboard";
                } else {
                    alert("Error: " + data.message);
                }
            } catch (error) {
                alert("Error submitting proposal: " + error.message);
            }
        });
    </script>
</body>
</html>