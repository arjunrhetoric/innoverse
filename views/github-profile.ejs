    <script>
        // Function to update the GitHub contribution chart dynamically
        function updateGitHubChart(username) {
            const chartElement = document.getElementById("github-chart");
            if (chartElement && username) {
                chartElement.src = `https://ghchart.rshah.org/2575fc/${username}`;
            }
        }

        // Fetch GitHub profile and repositories
        fetch('/api/auth/github/profile')
            .then(res => res.json())
            .then(data => {
                if (data.message === "GitHub token expired. Please log in again.") {
                    alert("Your session has expired. Please log in again.");
                    window.location.href = "/login"; // Redirect to login page
                    return;
                }

                // Update profile details
                document.getElementById("github-avatar").src = data.avatar || "/api/placeholder/150/150";
                document.getElementById("github-name").innerText = data.name || "GitHub User";
                document.getElementById("github-bio").innerText = data.bio || "No bio available";
                document.getElementById("github-link").href = data.url || "#";

                // Update GitHub contribution chart
                const githubUsername = data.login || "arjunrhetoric"; // Replace with dynamic username
                updateGitHubChart(githubUsername);

                // Fetch repositories
                fetch('/api/auth/github/repos')
                    .then(res => res.json())
                    .then(repos => {
                        let repoHTML = "";
                        repos.slice(0, 6).forEach(repo => {
                            repoHTML += `
                                <div class="repo-card">
                                    <h4>
                                        <i class="fas fa-book me-2"></i>
                                        <a href="${repo.html_url}" target="_blank">${repo.name}</a>
                                    </h4>
                                    <p>${repo.description || "No description available"}</p>
                                    <div class="repo-stats">
                                        <span><i class="fas fa-star me-1"></i>${repo.stargazers_count}</span>
                                        <span><i class="fas fa-code-fork me-1"></i>${repo.forks_count || 0}</span>
                                        <span><i class="fas fa-circle me-1"></i>${repo.language || 'N/A'}</span>
                                    </div>
                                </div>
                            `;
                        });
                        document.getElementById("repo-list").innerHTML = repoHTML;
                        animateRepoCards();
                    })
                    .catch(err => console.error("GitHub Repos Fetch Error:", err));
            })
            .catch(err => console.error("GitHub Profile Fetch Error:", err));

        // Animate repo cards on scroll
        function animateRepoCards() {
            const cards = document.querySelectorAll('.repo-card');
            cards.forEach((card, index) => {
                setTimeout(() => {
                    card.style.animation = `slideUp 0.5s ease-out forwards ${index * 0.1}s`;
                }, 100);
            });
        }

        // Intersection Observer for animation triggers
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = "1";
                    entry.target.style.transform = "translateY(0)";
                }
            });
        }, { threshold: 0.1 });

        document.querySelectorAll('.repo-card').forEach(card => {
            observer.observe(card);
        });
    </script>

