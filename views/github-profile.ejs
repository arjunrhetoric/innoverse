<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My GitHub Profile - INNOVERSE</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #2575fc;
            --secondary-color: #6a11cb;
            --bg-dark: #0a0a0a;
            --card-bg: #1a1a1a;
            --text-primary: #ffffff;
            --text-secondary: #b3b3b3;
        }

        body {
            background: linear-gradient(135deg, var(--bg-dark) 0%, #121212 100%);
            color: var(--text-primary);
            font-family: 'Inter', sans-serif;
            min-height: 100vh;
        }

        .navbar {
            background: rgba(30, 30, 30, 0.8) !important;
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            padding: 1rem 0;
        }

        .navbar-brand {
            font-weight: 700;
            background: linear-gradient(45deg, var(--primary-color), var(--secondary-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            transition: transform 0.3s ease;
        }

        .navbar-brand:hover {
            transform: scale(1.05);
        }

        .profile-header {
            text-align: center;
            padding: 50px 0;
            animation: fadeIn 1s ease-out;
        }

        .profile-header img {
            border-radius: 50%;
            width: 150px;
            border: 4px solid var(--primary-color);
            box-shadow: 0 0 20px rgba(37, 117, 252, 0.3);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .profile-header img:hover {
            transform: scale(1.05);
            box-shadow: 0 0 30px rgba(37, 117, 252, 0.5);
        }

        .profile-header h2 {
            margin-top: 20px;
            font-weight: 700;
            background: linear-gradient(45deg, var(--primary-color), var(--secondary-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .btn-primary {
            background: linear-gradient(45deg, var(--primary-color), var(--secondary-color));
            border: none;
            padding: 0.5rem 1.5rem;
            border-radius: 25px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(37, 117, 252, 0.3);
        }

        .contributions {
            margin: 40px 0;
            padding: 20px;
            background: var(--card-bg);
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
            animation: fadeIn 1s ease-out;
        }

        .contributions h3 {
            margin-bottom: 20px;
            color: var(--text-secondary);
        }

        .contributions img {
            max-width: 100%;
            border-radius: 10px;
            transition: transform 0.3s ease;
        }

        .contributions img:hover {
            transform: scale(1.02);
        }

        .repo-card {
            background: var(--card-bg);
            border: 1px solid rgba(255, 255, 255, 0.1);
            padding: 20px;
            border-radius: 15px;
            margin-bottom: 20px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            animation: slideUp 0.5s ease-out forwards;
            opacity: 0;
        }

        .repo-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(37, 117, 252, 0.15);
        }

        .repo-card h4 a {
            color: var(--text-primary);
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .repo-card h4 a:hover {
            color: var(--primary-color);
        }

        .repo-stats {
            display: flex;
            gap: 15px;
            margin-top: 15px;
            color: var(--text-secondary);
        }

        .repo-stats i {
            color: var(--primary-color);
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @keyframes slideUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .loading-skeleton {
            background: linear-gradient(90deg, var(--card-bg) 25%, #2a2a2a 50%, var(--card-bg) 75%);
            background-size: 200% 100%;
            animation: loading 1.5s infinite;
            border-radius: 4px;
            height: 20px;
            margin: 10px 0;
        }

        @keyframes loading {
            0% { background-position: 200% 0; }
            100% { background-position: -200% 0; }
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-code-branch me-2"></i>INNOVERSE
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/student-dashboard">
                            <i class="fas fa-dashboard me-1"></i> Back to Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="/api/auth/logout">
                            <i class="fas fa-sign-out-alt me-1"></i>Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container" style="margin-top: 80px;">
        <div class="profile-header">
            <img id="github-avatar" src="/api/placeholder/150/150" alt="GitHub Avatar">
            <h2 id="github-name">Loading...</h2>
            <p id="github-bio">Fetching profile...</p>
            <a id="github-link" href="#" target="_blank" class="btn btn-primary mt-3">
                <i class="fab fa-github me-2"></i>View on GitHub
            </a>
        </div>

        <div class="contributions">
            <h3><i class="fas fa-chart-line me-2"></i>GitHub Contributions</h3>
            <img id="github-chart" src="https://ghchart.rshah.org/2575fc/arjunrhetoric" alt="GitHub Contributions" />
        </div>

        <div class="repositories">
            <h3><i class="fas fa-code-branch me-2"></i>My Repositories</h3>
            <div id="repo-list">
                <div class="loading-skeleton"></div>
                <div class="loading-skeleton"></div>
                <div class="loading-skeleton"></div>
            </div>
        </div>
    </div>

    <script>
        // Function to update the GitHub contribution chart dynamically
        function updateGitHubChart(username) {
            const chartElement = document.getElementById("github-chart");
            if (chartElement && username) {
                chartElement.src = `https://ghchart.rshah.org/2575fc/${username}`;
            }
        }

        // Fetch GitHub profile and repositories
        fetch('/api/auth/github/profile')
            .then(res => res.json())
            .then(data => {
                if (data.message === "GitHub token expired. Please log in again.") {
                    alert("Your session has expired. Please log in again.");
                    window.location.href = "/login"; // Redirect to login page
                    return;
                }

                // Update profile details
                document.getElementById("github-avatar").src = data.avatar || "/api/placeholder/150/150";
                document.getElementById("github-name").innerText = data.name || "GitHub User";
                document.getElementById("github-bio").innerText = data.bio || "No bio available";
                document.getElementById("github-link").href = data.url || "#";

                // Update GitHub contribution chart
                const githubUsername = data.login || "arjunrhetoric"; // Replace with dynamic username
                updateGitHubChart(githubUsername);

                // Fetch repositories
                fetch('/api/auth/github/repos')
                    .then(res => res.json())
                    .then(repos => {
                        let repoHTML = "";
                        repos.slice(0, 6).forEach(repo => {
                            repoHTML += `
                                <div class="repo-card">
                                    <h4>
                                        <i class="fas fa-book me-2"></i>
                                        <a href="${repo.html_url}" target="_blank">${repo.name}</a>
                                    </h4>
                                    <p>${repo.description || "No description available"}</p>
                                    <div class="repo-stats">
                                        <span><i class="fas fa-star me-1"></i>${repo.stargazers_count}</span>
                                        <span><i class="fas fa-code-fork me-1"></i>${repo.forks_count || 0}</span>
                                        <span><i class="fas fa-circle me-1"></i>${repo.language || 'N/A'}</span>
                                    </div>
                                </div>
                            `;
                        });
                        document.getElementById("repo-list").innerHTML = repoHTML;
                        animateRepoCards();
                    })
                    .catch(err => console.error("GitHub Repos Fetch Error:", err));
            })
            .catch(err => console.error("GitHub Profile Fetch Error:", err));

        // Animate repo cards on scroll
        function animateRepoCards() {
            const cards = document.querySelectorAll('.repo-card');
            cards.forEach((card, index) => {
                setTimeout(() => {
                    card.style.animation = `slideUp 0.5s ease-out forwards ${index * 0.1}s`;
                }, 100);
            });
        }

        // Intersection Observer for animation triggers
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = "1";
                    entry.target.style.transform = "translateY(0)";
                }
            });
        }, { threshold: 0.1 });

        document.querySelectorAll('.repo-card').forEach(card => {
            observer.observe(card);
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 