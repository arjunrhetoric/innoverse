    <style>
        :root {
            --primary-color: #2575fc;
            --secondary-color: #6a11cb;
            --bg-dark: #0a0a0a;
            --card-bg: #1a1a1a;
            --text-primary: #ffffff;
            --text-secondary: #b3b3b3;
        }

        body {
            background: linear-gradient(135deg, var(--bg-dark) 0%, #121212 100%);
            color: var(--text-primary);
            font-family: 'Inter', sans-serif;
            min-height: 100vh;
        }

        .navbar {
            background: rgba(30, 30, 30, 0.8) !important;
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            padding: 1rem 0;
        }

        .navbar-brand {
            font-weight: 700;
            background: linear-gradient(45deg, var(--primary-color), var(--secondary-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            transition: transform 0.3s ease;
        }

        .navbar-brand:hover {
            transform: scale(1.05);
        }

        .profile-header {
            text-align: center;
            padding: 50px 0;
            animation: fadeIn 1s ease-out;
        }

        .profile-header img {
            border-radius: 50%;
            width: 150px;
            border: 4px solid var(--primary-color);
            box-shadow: 0 0 20px rgba(37, 117, 252, 0.3);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .profile-header img:hover {
            transform: scale(1.05);
            box-shadow: 0 0 30px rgba(37, 117, 252, 0.5);
        }

        .profile-header h2 {
            margin-top: 20px;
            font-weight: 700;
            background: linear-gradient(45deg, var(--primary-color), var(--secondary-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .btn-primary {
            background: linear-gradient(45deg, var(--primary-color), var(--secondary-color));
            border: none;
            padding: 0.5rem 1.5rem;
            border-radius: 25px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(37, 117, 252, 0.3);
        }

        .contributions {
            margin: 40px 0;
            padding: 20px;
            background: var(--card-bg);
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
            animation: fadeIn 1s ease-out;
        }

        .contributions h3 {
            margin-bottom: 20px;
            color: var(--text-secondary);
        }

        .contributions img {
            max-width: 100%;
            border-radius: 10px;
            transition: transform 0.3s ease;
        }

        .contributions img:hover {
            transform: scale(1.02);
        }

        .repo-card {
            background: var(--card-bg);
            border: 1px solid rgba(255, 255, 255, 0.1);
            padding: 20px;
            border-radius: 15px;
            margin-bottom: 20px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            animation: slideUp 0.5s ease-out forwards;
            opacity: 0;
        }

        .repo-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(37, 117, 252, 0.15);
        }

        .repo-card h4 a {
            color: var(--text-primary);
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .repo-card h4 a:hover {
            color: var(--primary-color);
        }

        .repo-stats {
            display: flex;
            gap: 15px;
            margin-top: 15px;
            color: var(--text-secondary);
        }

        .repo-stats i {
            color: var(--primary-color);
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @keyframes slideUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .loading-skeleton {
            background: linear-gradient(90deg, var(--card-bg) 25%, #2a2a2a 50%, var(--card-bg) 75%);
            background-size: 200% 100%;
            animation: loading 1.5s infinite;
            border-radius: 4px;
            height: 20px;
            margin: 10px 0;
        }

        @keyframes loading {
            0% { background-position: 200% 0; }
            100% { background-position: -200% 0; }
        }
    </style>
